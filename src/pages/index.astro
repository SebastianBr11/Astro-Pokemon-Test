---
import BaseLayout from "../layouts/BaseLayout.astro";
import Example from "../components/Example.svelte";
import Socials from "../components/Socials.svelte";

import { pokemon } from "../util/fetching.js";

const preRendered = await pokemon.all(fetch); 
--- 

<BaseLayout>
  <main class="container mx-auto p-8 grid">
    <Example preRendered={preRendered} client:idle /> 
  </main>
  <footer class="w-full mt-20 bg-gray-200 dark:bg-black/30">
    <div class="container mx-auto p-8 flex justify-center gap-8">
      <Socials client:idle />
    </div>
  </footer>
</BaseLayout>