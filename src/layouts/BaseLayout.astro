---
  const title = "Pokemon API with Astro"
---
<html class="dark" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
    <link rel="stylesheet" type="text/css" href={Astro.resolve("../styles/global.css")}>
    <meta name="description" content="This is an app which shows all Pokemon and some info about them." />
    <meta property="og:title" content={title}/>
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://astro-pokemon-test.vercel.app/" />
    <meta property="og:image" content="/favicon.ico" />
  </head>
  <body class="min-h-screen bg-gray-100 dark:bg-gray-800 pt-2 lg:pt-6 xl:pt-8 text-gray-900 dark:text-gray-300 grid place-items-center">
    <slot />
  </body>
</html>
